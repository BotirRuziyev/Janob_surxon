<style>
    .nav-link{
        color: #272727 !important;
        transition: all 0.5s ease;
    }
    .nav-link:hover{
        color: #b19777 !important;
    }
    .pro_top{
        width: 100%;
        height: 200px;
    }
</style>

 
 <!-- Lines -->
 <section class="content-lines-wrapper">
    <div class="content-lines-inner">
        <div class="content-lines"></div>
    </div>
</section>
<!-- Header Banner -->
<section class="banner-header banner-img valign bg-img bg-fixed" data-overlay-light="3" data-background="/img/banner.jpg">
    <!-- Left Panel -->
    <div class="left-panel"></div>
</section>
<!-- Services Page -->
<section class="section-padding2">
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <% if(lang==='uz' ){ %>
                <h2 class="section-title2"><%= result.title.uz %></h2>
                <%}%>
            <% if(lang==='ru' ){ %>
                <h2 class="section-title2"><%= result.title.ru %></h2>
                <%}%>
            <% if(lang==='en' ){ %>
                <h2 class="section-title2"><%= result.title.en %></h2>
                <%}%>
            <% if(lang===undefined ){ %>
                <h2 class="section-title2"><%= result.title.uz %></h2>
                <%}%>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <% if(lang==='uz' ){ %>
                <p><%= result.description.uz %></p>
                <%}%>
            <% if(lang==='ru' ){ %>
                <p><%= result.description.ru %></p>
                <%}%>
            <% if(lang==='en' ){ %>
                <p><%= result.description.en %></p>
                <%}%>
            <% if(lang===undefined ){ %>
                <p><%= result.description.uz %></p>
                <%}%>
            <div class="row mb-30">
                <% for (let item of result.file) { %>
                    <div class="col-md-6 gallery-item">
                        <a href="/uploads/services/<%= item %>" title="<%= result.title.uz %>" class="img-zoom">
                            <div class="gallery-box">
                                <div class="gallery-img"> <img style="height: 300px;" src="/uploads/services/<%= item %>" class="img-fluid mx-auto d-block" alt="work-img"> </div>
                            </div>
                        </a>
                    </div>  
                    <%}%>        
    </div>
        </div>
        <div class="col-md-4 sidebar-side">
                <aside class="sidebar blog-sidebar">
                    <div class="sidebar-widget services">
                        <div class="widget-inner">
                            <div class="sidebar-title">
                                <h4>All Services</h4>
                            </div>
                            <ul>
                                <% for (let item of services) { %>
                                <li><a href="/servic/<%= item._id %>">
                                    <% if(lang==='uz' ){ %>
                                    <%= item.name.uz %>
                                    <%}%> 
                                    <% if(lang==='ru' ){ %>
                                    <%= item.name.ru %>
                                    <%}%> 
                                    <% if(lang==='en' ){ %>
                                    <%= item.name.en %>
                                    <%}%> 
                                    <% if(lang===undefined ){ %>
                                    <%= item.name.uz %>
                                    <%}%> 
                                </a></li>
                                <%}%>  
                            </ul>
                        </div>
                    </div>
                </aside>
        </div>
    </div>
    
</div>
</section>