<div class="container">
    <h2>Eng yaxshi loyihalar</h2>
    <table class="table table-striped table-centered mb-0">
        <thead>
            <tr>
                <th>Rasm</th>
                <th>Turi</th> 
                <th>Topshirilgan sana</th> 
                <th>Sarlavha</th>
                <th>Tahrirlash</th> 
            </tr>
        </thead>
        <tbody>
            <% for (let item of news) { %>
            <tr>
                <td class="table-user"> 
                   
                    <img src="/uploads/news/<%=item.image %>"  alt="table-user" class="me-2 rounded" />
        
                </td>
                <td><%= item.name.uz %></td>
                <td><%= item.year %></td>
                <td><%= item.title.uz %></td>
                <td class="table-action">
                    <a href="<%=`/news/${item._id}`%>" class="action-icon"> <i class="mdi mdi-pencil"></i></a>
                <form method="POST" class="hidden-r" action="<%=`/news/delete/${item._id}?_method=DELETE`%>">
                        <button type="submit">
                           <i class="mdi mdi-delete"></i>
                        </button>
                </form>
                </td>
            </tr> 
            <%}%> 
        </tbody>
    </table> 
</div>